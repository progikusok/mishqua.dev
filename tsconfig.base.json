{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "importHelpers": true,
    "isolatedModules": true,
    "locale": "en",
    "moduleResolution": "Node",
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": false,
    "strict": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "importsNotUsedAsValues": "error",
    "allowUnreachableCode": false,
    "target": "ES2020",
    "module": "ES2020",
    "paths": {
      "@mishqua-dev/common": ["libs/common/src/index.ts"],
      "@mishqua-dev/main-page": ["libs/main-page/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
